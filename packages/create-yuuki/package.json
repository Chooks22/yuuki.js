{
  "name": "create-yuuki",
  "version": "0.0.1",
  "description": "CLI tool for quickly starting your new Discord bot",
  "license": "MIT",
  "type": "module",
  "files": [
    "./dist",
    "./templates"
  ],
  "bin": "dist/bin.js",
