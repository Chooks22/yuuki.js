  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "which-pm-runs": "^1.1.0"
  },
  "devDependencies": {
    "@chookslint/eslint-config-typescript": "^3.0.2",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "author": "Chooks22 <chooksdev@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chooks22/yuuki.js.git",
    "directory": "packages/create-yuuki"
  },
  "publishConfig": {
    "access": "public"
