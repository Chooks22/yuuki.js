{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "exclude": [
    "dist"
  ]
}
